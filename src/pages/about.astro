---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";

const identity = {
  firstName: "Kadir",
  country: "Turkiye",
  occupation: "Software Developer",
  hobbies: ["movies", "drawing"],
};

const skills = ["Astro", "HTML", "CSS", "JavaScript", "Writing Docs"];

const happy = true;
const finished = false;
---
<BaseLayout pageTitle={pageTitle}>
  
  <!-- HTML comment syntax is valid in .astro files -->
  {/* TODO messages or other development-only explanations */}

  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>
      I live in {identity.country} and I work as a {identity.occupation}.
    </li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {identity.hobbies[0]} and{" "}
          {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>

  {happy && <p>I am happy to be learning Astro!</p>}

  {finished && <p>I finished this tutorial!</p>}
</BaseLayout>